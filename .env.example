# Exemple de fichier .env pour la production
# Copiez ce fichier en .env et modifiez les valeurs selon votre configuration

# Configuration PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ChangezCeMotDePasse123!
POSTGRES_DB=tickets_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Clé secrète pour JWT (IMPORTANT: Changez cette clé avec une valeur aléatoire sécurisée)
# Générez une clé sécurisée avec: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=changez_moi_avec_une_cle_secrete_longue_et_aleatoire_123456789

# Durée d'expiration du token JWT (en minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Configuration SMTP pour l'envoi d'emails
EMAIL_ENABLED=true
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=votre_email@gmail.com
SMTP_PASSWORD=votre_mot_de_passe_app_gmail
SENDER_EMAIL=votre_email@gmail.com
SENDER_NAME=Système de Gestion des Tickets
USE_TLS=true
VERIFY_SSL=true

# Configuration CORS (séparer les origines par des virgules)
# Exemple: ALLOWED_ORIGINS=https://votre-domaine.com,https://www.votre-domaine.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# URL de l'API pour le frontend (utilisé lors du build)
VITE_API_URL=http://localhost:8000
